<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp">

        <TextView
            android:id="@+id/pnamepcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"

            android:text="Patient's Name"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/pnicpcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pnamepcr"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Patient's NIC"
            android:textColor="#000"
            android:textSize="25sp"
            tools:ignore="NotSibling" />


        <TextView
            android:id="@+id/pnopcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pnicpcr"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Number of PCR"
            android:textColor="#000"
            android:textSize="25sp"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/paddresspcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pnopcr"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Patient's Address"
            android:textColor="#000"
            android:textSize="25sp"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/pmobilepcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paddresspcr"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Patient's Mobile NO"
            android:textColor="#000"
            android:textSize="25sp"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/pemailpcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pmobilepcr"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Patient's Email"
            android:textColor="#000"
            android:textSize="25sp"
            tools:ignore="NotSibling" />

        <LinearLayout
            android:layout_below="@id/pemailpcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_margin="3dp"
                android:id="@+id/buttonedit"/>


            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_margin="3dp"
                android:id="@+id/buttondelete"/>


        </LinearLayout>

    </RelativeLayout>





</androidx.cardview.widget.CardView>