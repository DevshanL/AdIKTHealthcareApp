<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true"
    android:background="@drawable/mad_main2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="488dp"
        android:background="@drawable/mad_main2"
        android:padding="15dp">


        <TextView
            android:id="@+id/pnamepcrtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="75dp"
            android:gravity="left"
            android:text="Patient's Name"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/pnamepcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginRight="75dp"
            android:gravity="right"
            android:text="Patient's Name"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/pnicpcrtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="110dp"
            android:layout_marginRight="75dp"
            android:gravity="left"
            android:text="Patient's NIC"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/pnicpcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginRight="75dp"
            android:gravity="right"
            android:text="Patient's NIC"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/pnopcrtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="75dp"
            android:gravity="left"
            android:text="NO of PCR"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/pnopcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_marginRight="75dp"
            android:gravity="right"
            android:text="NO of PCR"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paddresspcrtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="230dp"
            android:layout_marginRight="75dp"
            android:gravity="left"
            android:text="Address"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/paddresspcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginRight="75dp"
            android:gravity="right"
            android:text="Address"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pmobilepcrtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="290dp"
            android:layout_marginRight="75dp"
            android:gravity="left"
            android:text="Mobile"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/pmobilepcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:layout_marginRight="75dp"
            android:gravity="right"
            android:text="Mobile"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pemailpcrtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="350dp"
            android:layout_marginRight="75dp"
            android:gravity="left"
            android:text="e-mail"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/pemailpcr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_marginRight="75dp"
            android:gravity="right"
            android:text="e-mail"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pemailpcr"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <Button
                android:id="@+id/buttonedit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:text="Edit"
                app:backgroundTint="@color/btn" />

            <Button
                android:id="@+id/buttondelete"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:layout_gravity="right"

                android:layout_marginLeft="100dp"
                android:text="Delete"
                app:backgroundTint="#F44336" />


        </LinearLayout>

    </RelativeLayout>





</androidx.cardview.widget.CardView>